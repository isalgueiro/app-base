{
  "metadata": {
    "name": "login"
  },
  "panel": {
    "header": {
      "title": "Log In",
      "subtitle": "Please, provide your credentials to log in into the application"
    }
  },
  "form": {
    "title": "Log In",
    "submitLabel": "Send",
    "buttonBlock": true,
    "controls": [
      {
        "key": "email",
        "type": "email",
        "label": "Email",
        "defaultValue": "admin@agorabinaria.com",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Email is required"
          }
        ]
      },
      {
        "key": "password",
        "type": "password",
        "label": "Password",
        "defaultValue": "secret",
        "validators": [
          {
            "key": "required",
            "errorMessage": "Password is required"
          }
        ]
      }
    ]
  }
}
